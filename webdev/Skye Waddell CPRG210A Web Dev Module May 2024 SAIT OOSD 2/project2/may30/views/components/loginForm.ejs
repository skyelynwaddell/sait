<h1>Login</h1>

<section class="container">

    <form action="/login" method="POST">

        <div class="inputSection">
            <label class="inputLabel" for="email">Email</label>
            <input required placeholder="Email" type="email" name="email" id="email" class="inputBox">
        </div>

        <div class="inputSection">
            <label class="inputLabel" for="password1">Password</label>
            <input required placeholder="Password" type="password" name="password1" id="password1" class="inputBox">
        </div>

        <div class="inputSection">
            <button id="registerForm" type="submit" class="btn btn-primary btn-purple">Login</button>
        </div>

    </form>

</section>