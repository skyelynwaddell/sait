<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Setechi | Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">

</head>

<body>

    <div class="ccontainer">

        <div class="stickyContainer">
            <header class="sticky">
                <img onclick="loadPage('/')" class="navLogo link" src="./img/logo2.png" alt="">

                <div class="input-group">
                    <input type="search" placeholder="Search..." name="searchSiteMain" id="searchSiteMain">
                </div>

                <div class="navItems">
                    <button onclick="loadPage('/login')" class="btn btn-dark">Login</button>
                    <button onclick="loadPage('/sign-up')" class="btn btn-purple">Sign Up</button>
                    <input type="search" placeholder="Search..." name="searchSiteRight" id="searchSiteRight">
                    <h1 id="searchIconRight">ðŸ”Ž</h1>
                </div>

            </header>

            <nav class="sticky">
                <ul>
                    <li><a href="./" class="navLink link">Home</a></li>
                    <li><a href="./about-us" class="navLink link">About Us</a></li>
                    <li><a href="./contact" class="navLink link">Contact</a></li>
                </ul>
            </nav>
        </div>


        <main>
            <section class="mainWrapper">

                <!-- Sidebar -->
                <div class="row g-0">
                    <div class="sidebar col col-3">
                        <div class="sidebar">
                            <div class="myProfileContainer">

                                <div class="myProfileNamePic">
                                    <img class="link myProfilePic" src="./img/logo.jpeg" alt="">
                                    <h3 class="link myProfileUsername">
                                        <%= userData.username %>
                                    </h3>
                                </div>

                                <table class="table table-dark">
                                    <thead>
                                        <tr>
                                            <th>
                                                <!-- Posts -->
                                                <h3 class="myProfileStatText">Posts</h3>
                                                <h3 class="myProfileStatText">
                                                    <%= userData.posts %>
                                                </h3>
                                            </th>
                                            <th>
                                                <!-- Following -->
                                                <h3 class="myProfileStatText">Following</h3>
                                                <h3 class="myProfileStatText">
                                                    <%= userData.following %>
                                                </h3>
                                            </th>
                                            <th>
                                                <!-- Followers -->
                                                <h3 class="myProfileStatText">Followers</h3>
                                                <h3 class="myProfileStatText">
                                                    <%= userData.followers %>
                                                </h3>
                                            </th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>

                            <h1 class="sidebarTitle">Recommended</h1>

                            <!-- Sidebar Profile -->
                            <% recommendedUsers.forEach(user=> { %>
                                <div class="sidebarProfile">
                                    <div class="sidebarRow">

                                        <!-- Sidebar Profile Picture -->
                                        <img class="sidebarPic link" src="./img/logo.jpeg" alt="">

                                        <!-- Sidebar Username -->
                                        <h1 class="sidebarName link">
                                            <%= user.username %>
                                        </h1>
                                    </div>

                                    <!-- Sidebar View Count -->
                                    <button class="recommendedFollowButton btn btn-purple cWhite">Follow</button>
                                </div>
                                <% }); %>

                        </div>
                    </div>
                </div>

                <div class="postContainer">

                    <div class="newPostContainer">
                        <h3>Login</h3>

                        <form action="/login" method="post">

                            <div class="signupTable">
                                <div class="signupCol">
                                    <div class="signupRow">
                                        <label class="inputLabel" for="inputEmail">Email</label>
                                        <input class="inputField" placeholder="Email" required id="inputEmail"
                                            type="email" name="" id="">
                                    </div>
                                    <div class="signupRow">
                                        <label class="inputLabel" for="inputUsername">Username</label>
                                        <input class="inputField" placeholder="Username" required id="inputUsername"
                                            type="text" name="" id="">
                                    </div>
                                    <div class="signupRow">
                                        <label class="inputLabel" for="inputPassword1">Password</label>
                                        <input class="inputField" placeholder="Password" required id="inputPassword1"
                                            type="password" name="" id="">
                                    </div>
                                </div>
                            </div>

                            <button type="submit" id="loginButton" class="btn btn-purple cWhite">Login</button>
                        
                        </form>

                    </div>
                </div>
            </section>
            <div class="dividerBottom"></div>
        </main>


        <footer>
            <p class="footerText">&copy; <a href="./" class="footerLink link">Setechi</a> 2024</p>
        </footer>

    </div>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
<script src="index.js"></script>

</html>